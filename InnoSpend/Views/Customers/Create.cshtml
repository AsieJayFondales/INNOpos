@*
    Customers/Create.cshtml
*@
@{
}

@model CustomersDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Add New Customers</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="Firstname" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input asp-for="Firstname" class="form-control" placeholder="Firstname"/>
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Lastname</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Lastname" placeholder="Lastname">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label asp-for="StreetAddress" class="col-sm-2 col-form-label">Street Address</label>
                <div class="col-sm-10">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="City" class="col-sm-2 col-form-label">City</label>
                <div class="col-sm-4">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <label asp-for="Province" class="col-sm-2 col-form-label">Province</label>
                <div class="col-sm-4">
                    <input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="PostalCode" class="col-sm-2 col-form-label">Postal Code</label>
                <div class="col-sm-4">
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <label asp-for="Country" class="col-sm-2 col-form-label">Country</label>
                <div class="col-sm-4">
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Company</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Company" placeholder="Firstname">
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" >Phone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" placeholder="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Notes</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Notes" placeholder="Notes"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input asp-for="MarketingConsent" class="form-check-input" type="checkbox" />
                        <label asp-for="MarketingConsent" class="form-check-label">
                            I consent to receive marketing communications
                        </label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-2 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-dark" asp-controller="Customers" asp-action="Customers" role="button">
                        Cancel
                    </a>

                </div>

            </div>

        </form>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}